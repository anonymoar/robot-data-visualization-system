{
  "name": "tiger",
  "private": true,
  "version": "0.1.0",
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "start": "npm-run-all -p start:*",
    "start:server": "nodemon",
    "start:client": "react-scripts start",
    "build": "react-scripts build",
    "serve": "NODE_ENV=production ts-node --project tsconfig.server.json server/index.ts",
    "test": "react-scripts test",
    "lint": "npm-run-all lint:*",
    "lint:ts": "tslint --project tsconfig.json",
    "lint:css": "stylelint '**/*.css'",
    "fix": "npm-run-all fix:*",
    "fix:ts": "tslint --fix --project tsconfig.json",
    "fix:css": "stylelint --fix '**/*.css'",
    "format": "prettier --write '**/*.{ts,tsx,css,json,yaml,yml,md}'"
  },
  "dependencies": {
    "@bem-react/classname": "1.4.4",
    "@bem-react/classnames": "1.3.1",
    "cors": "2.8.5",
    "express": "4.16.4",
    "react": "16.8.3",
    "react-dom": "16.8.3",
    "socket.io": "2.2.0",
    "socket.io-client": "2.2.0",
    "ts-node": "8.0.2"
  },
  "devDependencies": {
    "@hellroot/stylelint-config": "1.0.1",
    "@hellroot/tslint-config": "1.0.2",
    "@types/cors": "2.8.4",
    "@types/express": "4.16.1",
    "@types/jest": "24.0.9",
    "@types/node": "10.12.29",
    "@types/react": "16.8.6",
    "@types/react-dom": "16.8.2",
    "@types/socket.io": "2.1.2",
    "@types/socket.io-client": "1.4.32",
    "husky": "1.3.1",
    "nodemon": "1.18.10",
    "npm-run-all": "4.1.5",
    "prettier": "1.16.4",
    "react-scripts": "2.1.5",
    "stylelint": "9.10.1",
    "tslint": "5.13.1",
    "typescript": "3.3.3333"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run lint"
    }
  }
}
